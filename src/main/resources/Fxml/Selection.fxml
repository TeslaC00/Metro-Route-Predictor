<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="250.0" prefWidth="600.0" styleClass="selection" stylesheets="@../Style/Selection.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.metro.prediction.metroroutepredictor.controllers.SelectionController">
    <Text layoutX="156.0" layoutY="53.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Metro Route Predictor"
          textAlignment="CENTER" AnchorPane.topAnchor="25.0"/>
    <ComboBox fx:id="startStation_box" layoutX="67.0" layoutY="91.0" prefWidth="180.0" promptText="Start Station"
              AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="100.0"/>
    <ComboBox fx:id="endStation_box" layoutX="390.0" layoutY="91.0" prefWidth="180.0" promptText="Stop Station"
              AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0"/>
    <HBox layoutX="140.0" layoutY="125.0" prefHeight="50.0" prefWidth="500.0" AnchorPane.bottomAnchor="20.0"
          AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <RadioButton fx:id="comfy_radio_btn" mnemonicParsing="false" text="Less Interchange">
            <toggleGroup>
                <ToggleGroup fx:id="routeProperty"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="short_radio_btn" mnemonicParsing="false" text="Shortest" toggleGroup="$routeProperty"/>
        <RadioButton fx:id="cheap_radio_btn" mnemonicParsing="false" text="Cheapest" toggleGroup="$routeProperty"/>
        <Separator orientation="VERTICAL" prefHeight="200.0"/>
        <Button fx:id="find_btn" mnemonicParsing="false" text="Find"/>
    </HBox>
</AnchorPane>
